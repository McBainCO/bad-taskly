<h1>Add a task list</h1>

<%= form_for @tasks do |t| %>

  <p>
    <%= t.label :task %>
    <%= t.text_field :task %>
    <% if @task.errors[:title].any? %>
    <p class="error"><%= @task.errors[:title].first %><  /p>
  <% end %>
  </p>

  <p>
    <%= t.submit class: "form-button" %>
  </p>

<% end %>